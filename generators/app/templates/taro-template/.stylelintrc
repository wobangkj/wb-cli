{
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "selector-class-pattern": [
      "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
      {
        "resolveNestedSelectors": true
      }
    ],
    "color-hex-length": "short",
    "scss/dollar-variable-pattern": "^[a-z]?([a-z]+)(((-[a-z])([a-z]+))*)$"
  },
  "extends": [
    "stylelint-config-rational-order"
  ]
}
